<section>
  <div class="conatainer mt-4">
    <div class="row-ml-10">
      <div class="col-md-6" style="margin: 0 auto;">
        <h2 class="text-center">Edit Product</h2>
        <form
          action="/admin/edit-product?id={{productdetails._id}}"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="">Name</label>
          <input type="text" name="Name" class="form-control"  value="{{productdetails.Name}}"/>

          <label for="">Category</label>
          <input type="text" name="Category" class="form-control" value="{{productdetails.Category}}" />

          <label for="">Price</label>
          <input type="text" name="Price" class="form-control" value="{{productdetails.Price}}" />

          <label for="">Description</label>
          <input type="text" name="Description" class="form-control"  value="{{productdetails.Description}}"/>

          <label for="">Image</label>
          <img src="/product-images/{{productdetails._id}}.jpg" alt="" style="width: 50px; height:auto;" id="imgid">
          <input type="file" name="Image" class="form-control"  onchange="uploadimageThroughEdit(event)"/>

          <button type="submit" class="btn btn-success mt-4">Update</button>
        </form>

      </div>

    </div>
  </div>
</section>

<script>
    function uploadimageThroughEdit(event){
        document.getElementById('imgid').src = URL.createObjectURL(event.target.files[0])
    }
</script>