<section>
  <div class="container">
    <div class="row mt-4">
      {{! //ml-auto means margin left }}
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div>
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">ProductName</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>

          <th scope="col">Description</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{! //# means loop }}
        {{#each products}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>

            <td><img
                src="/product-images/{{this._id}}.jpg"
                alt=""
                style="width: 50px; height:50px;"
              /></td>
              <td>
                <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary">Edit</a>
                <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger ml-3" onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a>
                </td>


          </tr>
        {{/each}}
        {{! <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Larry</td>
      <td>the Bird</td>
      <td>@twitter</td>
    </tr> }}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>